{
	"manifest_version": 2,
	"name": "gPlus Minus",
	"version": "0.0.5",
	"author": "KTachibanaM,Catofes",
	"description": "Filter keywords on Google+ webpage and hide corresponding posts",
	"content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
	"content_scripts": [
	{
		"js": ["js/googleminus.js", "js/main.js"],
		"matches": [ "https://plus.google.com/*" ]
	}],
	"icons":{
		"128": "icon-128.png"
	},
	"background":{
		"scripts":["js/persistent.js","js/jquery.js","js/sync.js"],
		"persistent": false
	},
	"options_page": "options.html",
	"permissions": [
		"alarms"]
}
